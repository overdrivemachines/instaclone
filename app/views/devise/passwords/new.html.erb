<section class="holygrail-content section-main">
  <div class="auth-container modal-content">
    <div class="auth-header">
      <h2 class="auth-title">Forgot your password?</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, "data-turbo": "false" }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="auth-body">
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="auth-footer">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
